{
  "private": true,
  "name": "poi",
  "scripts": {
    "lint": "xo",
    "test": "cd examples/test-karma && yarn test",
    "test:local": "cd examples/test-karma && yarn test --no-headless"
  },
  "workspaces": [
    "core/*",
    "examples/*",
    "plugins/*",
    "other-packages/*",
    "create-poi-app"
  ],
  "devDependencies": {
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-rem": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.2.0",
    "lerna": "^3.4.3",
    "lint-staged": "^8.1.0",
    "xo": "^0.23.0"
  },
  "xo": {
    "extends": [
      "rem",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "unicorn/filename-case": "off",
      "no-await-in-loop": "off",
      "unicorn/no-abusive-eslint-disable": "off",
      "no-multi-assign": "off",
      "camelcase": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "xo --fix",
        "git add"
      ],
      "*.{md,json}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "examples/**",
      "create-poi-app/generator/templates/**"
    ]
  }
}
